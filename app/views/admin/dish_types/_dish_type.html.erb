<tr>
  <th scope="row"><%= dish_type_counter + 1 %></th>
  <td><%= dish_type.name %></td>
  <td><%= dish_type.description %></td>
  <td><%= dish_type.created_at.strftime(Settings.dish_types.format_date) %></td>
  <td><%= dish_type.updated_at.strftime(Settings.dish_types.format_date) %></td>
  <td>
    <div class="btn-group">
      <%= link_to edit_admin_dish_type_path(dish_type), class: "btn btn-warning", remote: true, title: t("dish_types.edit") do %>
        <i class="fa fa-edit"></i>
      <% end %>
      <%= link_to [:admin, dish_type], method: :delete, data: { confirm: t("dish_types.category.department.confirm") }, title: t("dish_types.delete"), remote: true, class: "btn btn-danger" do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
    </div>
  </td>
</tr>
