<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
      <h1 class="title-form"><%= yield(:title_text) %></h1>
      <%= form_for [:admin, @dish_type], remote: true do |f| %>
        <div class="form-group">
          <%= f.label :name, t("dish_types.name"), class: "small mb-1" %>
          <%= f.text_field :name, class: "form-control #{errors_textfield(f, :name)}" %>
          <p id="error_explanation"><%= show_errors(f, :name) %></p>
        </div>
        <div class="form-group">
          <%= f.label :description, t("dish_types.description"), class: "small mb-1" %>
          <%= f.text_area :description, class: "form-control py-4" %>
        </div>
        <%= f.submit yield(:button_text), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
