<div class="list clearfix">
  <div class="float-left">
    <h1 class="title-list"><%= t "dish_types.category_title" %></h1>
  </div>
  <div class="list">
  <%= link_to t("dish_types.add"), new_admin_dish_type_path, remote: true, class: "btn btn-primary btn-lg" %>
  </div>
</div>
<br/>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col"><%= t "dish_types.name" %></th>
      <th scope="col"><%= t "dish_types.description" %></th>
      <th scope="col"><%= t "dish_types.created_up" %></th>
      <th scope="col"><%= t "dish_types.updated_up" %></th>
      <th scope="col"><%= t "dish_types.action" %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @dish_types %>
  </tbody>
  <div class="modal" id="addModal">
</table>
