<h1 class="title-form"><%= yield(:title_text) %></h1>
<%= form_for [:admin, @dish] do |f| %>
  <div class="form-for">
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :name, t("dish_types.name") %>
        <%= f.text_field :name, class: "form-control #{errors_textfield(f, :name)}", required: "true" %>
        <p id="error_explanation"><%= show_errors(f, :name) %></p>
      </div>
      <div class="form-group col-md-4">
        <%= f.label :dish_type_id, t("dishes.list_dishes") %>
        <br/>
        <%= f.collection_select :dish_type_id, DishType.dish_types, :id, :name, {}, {class: "form-control"} %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :price, t("dishes.price") %>
        <%= f.number_field :price, class: "form-control #{errors_textfield(f, :price)}", required: "true" %>
        <p id="error_explanation"><%= show_errors(f, :price) %></p>
      </div>
      <div class="form-group col-md-4">
        <%= f.label :status, t("dishes.status") %>
        <br/>
        <%= f.select :status, options_for_status, {}, {class: "form-control"} %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-8">
        <%= f.label :description, t("dish_types.description") %>
        <%= f.text_area :description, class: "form-control" %>
      </div>
    </div>
    <%= f.label t("dishes.image") %>
    <div class="form-group">
      <div class="col-md-6">
        <div class="links">
          <%= link_to_add_association t("image.add_a_image"), f, :images,
                                      data: { association_insertion_node: ".images",
                                              association_insertion_method: :append,
                                            },
                                      class: "btn btn-success" %>
        </div>
        <table class="images">
          <%= f.fields_for :images do |image| %>
            <%= render "image_fields", f: image %>
          <% end %>
        </table>
      </div>
    </div>
    <%= f.submit yield(:button_text), class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
<%= javascript_pack_tag "image" %>
